set guioptions "sv"

set window-height 1024
set window-width 1000
set adjust-open "best-fit"

set scroll-full-overlap 0.01
set scroll-step 100

set default-fg                "#dcd7ba"
set default-bg                "#16161d"
set inputbar-bg               "#16161d"
set completion-bg             "#16161d"
set statusbar-bg              "#16161d"
set statusbar-fg              "#dcd7ba"
set inputbar-fg               "#dcd7ba"
set completion-group-bg       "#16161d"
set completion-highlight-bg   "#7fb4ca"
set notification-warning-bg   "#c0a36e"
set notification-warning-fg   "#16161d"
set notification-error-bg     "#c34043"
set notification-error-fg     "#dcd7ba"

set recolor true
set recolor-keephue true
set recolor-reverse-video true
set recolor-lightcolor "#1f1f28"
set recolor-darkcolor  "#dcd7ba"

map j feedkeys "<C-Down>"
map k feedkeys "<C-Up>"
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

set font "JetBrainsMonoNL Nerd Font 10"

set render-loading false
set scroll-step 50

set database "sqlite"

