set guioptions v

set window-height 1024
set window-width 1000
set adjust-open width

set default-bg "#111111"
set inputbar-bg "#111111"
set completion-bg "#111111"
set statusbar-bg "#111111"

set recolor true
set recolor-keephue true
set recolor-lightcolor "#222222"

map j feedkeys "<C-Down>"
map k feedkeys "<C-Up>"
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

set font "JetBrainsMonoNL Nerd Font 10"

set render-loading false
set scroll-step 50
